# vi: set ft=gitconfig :
[alias]
    co = checkout
    cob = checkout -b
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    squish = merge --squash
[color]
    branch = auto
    interactive = auto
    status = auto
    ui = auto
[core]
    editor = vim
    excludesFile = ~/.gitignore
[merge]
    tool = vimdiff
[push]
    default = current
[user]
    name = John DiStasio
    email = jndistasio@gmail.com
