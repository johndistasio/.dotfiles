# vi: set ft=gitconfig:
[alias]
  bye = checkout -- .
  destroy  = "!x() { if [ \"$1\" != \"\" ]; then git branch -D \"$1\"; else git branch | rg --invert-match '\\*' | cut -c 3- | fzf --multi | xargs --no-run-if-empty git branch -D; fi; }; x"
  get = "!x() { if [ \"$1\" != \"\" ]; then git checkout \"$1\"; else git branch | cut -c 3- | fzf | xargs --no-run-if-empty git checkout; fi; }; x"
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  new = checkout -b
  squish = merge --squash
  staged = diff --staged
  sync = fetch --all --prune
[color]
  ui = auto
[core]
  editor = nvim
  excludesFile = ~/.gitignore
[mergetool "vimdiff"]
  path = nvim
[merge]
  tool = vimdiff
[push]
  default = current

# Stick site-local settings customizations here; keep out of source control
[include]
  path = ~/.gitconfig.local
